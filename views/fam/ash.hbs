<div class="section ash">
  <h1>Bingley is...</h1>
  <div class="person-desc">
    <p id="person-desc"></p>
  </div>
  <div class="person-content">
    <div id="person-image"></div>
  </div>
  <h2>HAVE A MERRY CHRISTMAS!!!</h2>
</div>

<script>
const image = document.getElementById('person-image');
const text = document.getElementById('person-desc');

function getRandomImage()
{
    var images = [
        '/images/ash/athletic.PNG',
        '/images/ash/boys.PNG',
        '/images/ash/cute.JPG',
        '/images/ash/fashion.PNG',
        '/images/ash/friend.PNG',
        '/images/ash/gorgeous.PNG',
        '/images/ash/passionate.PNG',
        '/images/ash/sister.JPG',
        '/images/ash/piano.PNG'
    ];
    var ran_num = Math.floor(Math.random() * 9);
    var num = images[ran_num];

    setText(ran_num);
    setImage(num);
}

function setText(ran_num) {
  if (ran_num === 0){text.innerHTML = "Athletic";}
  if (ran_num === 1){text.innerHTML = "Loved By So Many Boys";}
  if (ran_num === 2){text.innerHTML = "A Marshmallow";}
  if (ran_num === 3){text.innerHTML = "Fashunz";}
  if (ran_num === 4){text.innerHTML = "Best Friends With Everyone";}
  if (ran_num === 5){text.innerHTML = "Pretty";}
  if (ran_num === 6){text.innerHTML = "Passionate";}
  if (ran_num === 7){text.innerHTML = "A Great Sister ❤";}
  if (ran_num === 8){text.innerHTML = "A Great Pianist";}
}

function setImage(thisImg) {
    var img = document.createElement("IMG");
    img.src = thisImg;
    image.appendChild(img);
}

getRandomImage();

</script>

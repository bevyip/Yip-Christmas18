 </div>
<div class="section mum">
  <h1>Mum is...</h1>
  <div class="person-desc">
    <p id="person-desc"></p>
  </div>
  <div class="person-content">
    <div id="person-image"></div>
  </div>
  <h2>HAVE A MERRY CHRISTMAS!!!</h2>
</div>

<script>
const image = document.getElementById('person-image');
const text = document.getElementById('person-desc');

function getRandomImage()
{
    var images = [
        '/images/mum/mother.PNG',
        '/images/mum/athletic.PNG',
        '/images/mum/pretty.PNG',
        '/images/mum/wife.PNG',
        '/images/mum/young.jpg',
        '/images/mum/cute.JPG',
        '/images/mum/funny.jpg',
        '/images/mum/model.PNG',
        '/images/mum/skin.jpg',
        '/images/mum/also_funny.PNG'
    ];
    var ran_num = Math.floor(Math.random() * 10);
    var num = images[ran_num];

    setText(ran_num);
    setImage(num);
}

function setText(ran_num) {
  if (ran_num === 0){text.innerHTML = "The Best Mum!";}
  if (ran_num === 1){text.innerHTML = "Very Athletic";}
  if (ran_num === 2){text.innerHTML = "Gorgeous";}
  if (ran_num === 3){text.innerHTML = "A Great Wife ❤";}
  if (ran_num === 4){text.innerHTML = "好年轻喔！";}
  if (ran_num === 5){text.innerHTML = "cute hehe";}
  if (ran_num === 6){text.innerHTML = "funny :>";}
  if (ran_num === 7){text.innerHTML = "A Model!";}
  if (ran_num === 8){text.innerHTML = "Soft And Silky Like Tofu";}
  if (ran_num === 9){text.innerHTML = "Still Funny";}
}

function setImage(thisImg) {
    var img = document.createElement("IMG");
    img.src = thisImg;
    image.appendChild(img);
}

getRandomImage();

</script>
